{
  "name": "ory-mcp-oauth-provider",
  "version": "1.0.0",
  "description": "OAuth provider for Ory MCP",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint && npm run format:check"
  },
  "keywords": [
    "ory",
    "oauth",
    "mcp",
    "authentication"
  ],
  "author": "Ory",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^1.2.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ory-mcp-oauth-provider.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ory-mcp-oauth-provider/issues"
  },
  "homepage": "https://github.com/yourusername/ory-mcp-oauth-provider#readme",
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.11.2",
    "express": "^5.1.0"
  }
}
